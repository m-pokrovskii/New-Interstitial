rupture.scale        = 0 400px 600px 800px 1050px 1800px
rupture.scale-names = 'xs' 's' 'm' 'l' 'xl' 'hd'
va()
	position: relative;
	top: 50%; 
	transform: translateY(-50%);
	
reset_va() {
	top: auto;
	transform: none;	
	}
		
// 
	
html
	font-size 62.5% !important
	line-height 1.8em !important
	font-family Arial !important
	overflow hidden
	height: 100%;
	+above("s", orientation: landscape)
		font-size 62.5% !important
		line-height 1.8em !important
	+above("m", orientation: landscape)
		font-size 80% !important
		line-height 1.8em !important
	+above("l", orientation: landscape)
		font-size 120% !important
		line-height 1.8em !important
	+above("xl", orientation: landscape)
		font-size 140% !important
		line-height 1.8em !important
	@media (max-height: 479px) and (orientation: portrait)
		font-size 60% !important
		line-height 1.5em !important
	@media (min-height: 500px) and (orientation: portrait)
		font-size 70% !important
		line-height 1.8em !important
	@media (min-height: 639px) and (orientation: portrait)
		font-size 80% !important
		line-height 1.8em !important
	@media (min-height: 700px) and (orientation: portrait)
		font-size 100% !important
		line-height 1.8em !important
	@media (min-height: 750px) and (orientation: portrait)
		font-size 120% !important
		line-height 1.8em !important
	@media (min-height: 950px) and (orientation: portrait)
		font-size 140% !important
		line-height 1.8em !important

body
	font-size: 1em !important;
	overflow: hidden;
	padding: 0; margin: 0;

body, .app {
	position: fixed;
	z-index: 2147483647;
	width: 100%; height:100%;
	top 0; left 0; right 0; bottom 0;	
	color: #000 !important;
	overflow: hidden;
	background: #FFF;	
	}

		
.app * 
	box-sizing border-box
	margin 0
	padding 0  

.app__wrapper {
	width 100%
	height 100%
	+above("s", orientation: landscape) {
		height auto
		va()		
		}
	}
.apps {
	width: 100%;
	height: 100%;
	va();
	overflow: hidden;
	+above("s", orientation: landscape) {
		reset_va();
		height: 100%;
		}
	}

.app__container
	position relative
	width: 100%;
	padding: 0 2%;
	height 100%
	+above("s", orientation: landscape)
		display table
		padding: 0;
		width: 100%;
		height 100%

.only-portrait
	display block
.only-landscape
	display none

+above("s", orientation: landscape)
	.only-portrait
		display none
	.only-landscape
		display block

.app__content-wrapper
	height 100% 

.app__top
	position relative
	height 62%
	+above("s", orientation: landscape)
		display table-cell
		width 50%
		height 100%
		padding 3.5% 0 3% 0 

.app__bottom
	position relative
	height 33%
	padding 1em
	+above("s", orientation: landscape)
		display table-cell
		width 50%
		height 100%
		vertical-align bottom
		padding 3.5% 2% 3% 2%

.app__footer {
	position: absolute; bottom: 0; left: 50%; margin-left: -42%;
	height 5%
	width 85%
	}
	+above("s", orientation: landscape) {

		}

.app__headline
	font-size 1.5em; font-weight 700  
	height 17%
	text-align center
	word-break break-word
	+above("s", orientation: landscape)
		position relative
		padding 0 1em 
		height 17%
	
.app__headline__text
	display block
	padding 0.4em 1em 0.4em 1em
	va()
	

.app__desc
	height 100%
	+above("s", orientation: landscape)
		height 78%

.app__image-container
	position relative
	text-align center
	margin 0 auto
	height auto
	va();
	+above("s", orientation: landscape)
		padding 0 
		width 100% 
		height 100%
		reset_va();
		margin 0 auto
	img
		width 100%
		height auto
		display inline-block
		+above("s", orientation: landscape)
			display block
			width 90%
			margin 0 auto 
			height auto

.app__app-desc__table
	width 100%
	height auto
	margin-top -0.5em 
	border-spacing 0
	border-collapse collapse	
	font-size 1em 
	td
		padding 0.5em 0
		vertical-align top
	+above("s", orientation: landscape)
		position relative
		top 0.5em
		height auto
		
				
.app__app-desc__title
	font-size 2.5em 
	font-weight bold
	text-align center
	line-height: 1;
	margin-bottom 0.5em;
	+above("s", orientation: landscape)
		font-size 2em 


.app__app-desc__desc
	font-size 1.3em
	text-align center
			
.app__button-container
	text-align center

.app__btn
	background: linear-gradient(to bottom,  #f99b1d 0%, #f47320 100%);
	display inline-block
	font-size 1.6em
	font-weight bold 
	text-decoration none
	color #fff
	padding 1em 1.5em
	min-width: 90%;
	word-break break-word
	+above("s", orientation: landscape)
		font-size 1.5em
		white-space nowrap
				
.app__powered-by 
	position: absolute; left: 50%; margin-left: -20%;
	width 40%
	+above("s", orientation: landscape)
		width 20% 
	img 
		width 100%
	
.app__skip
	position: absolute; right: 0; top: 2px;
	
.app__skip-link
	display block
	color #a7a7a7
	text-decoration none
	font-size 1.1em 
	line-height 1 !important 
	padding 0.3em
	margin-top -0.3em 
	
.swiper-container {
	width: 100%; height: 100%;
	}
	
.swiper-wrapper {
	height: 100%;
	}

.swiper-slide {
	width: 85% !important;
	height: 100%;
	@media (min-width: 400px) and (orientation: landscape) {
		width: 100% !important;
		height: 100%;
		}
	}