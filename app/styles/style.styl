rupture.scale        = 0 400px 600px 800px 1050px 1800px
rupture.scale-names = 'xs' 's' 'm' 'l' 'xl' 'hd'
va()
	position: relative;
	top: 50%; 
	transform: translateY(-50%);
	
reset_va() {
	top: auto;
	transform: none;	
	}
		
// 
	
html
	font-size 62.5% !important
	line-height 1.8em !important
	font-family Arial !important
	overflow hidden
	height: 100%;
	+above("s", orientation: landscape)
		font-size 62.5% !important
		line-height 1.8em !important
	+above("m", orientation: landscape)
		font-size 80% !important
		line-height 1.8em !important
	+above("l", orientation: landscape)
		font-size 120% !important
		line-height 1.8em !important
	+above("xl", orientation: landscape)
		font-size 140% !important
		line-height 1.8em !important
	@media (max-height: 479px) and (orientation: portrait)
		font-size 60% !important
		line-height 1.5em !important
	@media (min-height: 500px) and (orientation: portrait)
		font-size 70% !important
		line-height 1.8em !important
	@media (min-height: 639px) and (orientation: portrait)
		font-size 80% !important
		line-height 1.8em !important
	@media (min-height: 700px) and (orientation: portrait)
		font-size 100% !important
		line-height 1.8em !important
	@media (min-height: 750px) and (orientation: portrait)
		font-size 120% !important
		line-height 1.8em !important
	@media (min-height: 950px) and (orientation: portrait)
		font-size 140% !important
		line-height 1.8em !important

body
	font-size: 1em !important;
	overflow: hidden;
	padding: 0; margin: 0;

body, .app {
	position: fixed;
	z-index: 2147483647;
	width: 100%; height:100%;
	top 0; left 0; right 0; bottom 0;	
	color: #000 !important;
	overflow: hidden;
	background: #FFF;	
	}

.app {
	display: none;
	}
		
.app * 
	box-sizing border-box
	margin 0
	padding 0  

.app__wrapper {
	width 100%
	height 100%
	+above("s", orientation: landscape) {
		height 100%
		}
	}
.apps {
	width: 100%;
	height: 100%;
	va();
	overflow: hidden;
	+above("s", orientation: landscape) {
		reset_va();
		height: 100%;
		}
	}

.app__container
	position relative
	width: 100%;
	padding: 0 2%;
	height 100%
	+above("s", orientation: landscape)
		display table
		padding: 2% 0;
		width: 100%;
		height 100%

.only-portrait
	display block
.only-landscape
	display none

+above("s", orientation: landscape)
	.only-portrait
		display none
	.only-landscape
		display block

.app__content-wrapper {
	height 100% 
	+above("s", orientation: landscape) {
		height: auto;
		}
}
	

.app__top
	position relative
	height 50%
	+above("s", orientation: landscape)
		display table-cell
		width 50%
		height 100%
		padding 0 
		vertical-align: middle;

.app__bottom
	position relative
	height 50%
	@media (max-height: 500px) and (orientation: portrait) {
		height 45%
		}
	+above("s", orientation: landscape)
		display table-cell
		width 50%
		height 100%
		vertical-align middle
		padding 0 2% 0 2%

.app__footer {
	position: absolute; bottom: 0; left: 50%; margin-left: -42%; z-index: 100;
	height 5%
	width 85%
	+above("s", orientation: landscape) {
		bottom:auto; top: 1em; left: 0; margin: 0; right: 1em;
		width: auto;
		}
	}

.app__headline
	font-size 1.5em; font-weight 700  
	height 17%
	text-align center
	word-break break-word
	color: #454545;
	+above("s", orientation: landscape)
		position relative
		font-size 1.5em;
		height auto
		text-align: left;
	
.app__headline__text
	display block
	padding 0.4em 1em 0.4em 1em
	va()
	

.app__desc
	height 100%
	padding: 0 7%;
	+above("s", orientation: landscape)
		height auto
		padding: 0;

.app__image-container
	position relative
	text-align center
	margin 0 auto
	height 100%
	+above("s", orientation: landscape)
		padding 0 
		width 100% 
		height auto
		margin 0 auto
	img {
		position: absolute; bottom: 0; left: 0;
		width 100%
		height auto
		display inline-block
		@media (max-height: 550px) and (orientation: portrait) {
			position: static;
			padding: 0.5em;
			width: auto;
			height: 100%;
			}
		+above("s", orientation: landscape) {
			position: static;
			display block
			width 90%
			margin 0 auto 
			height auto			
			}		
		}
		

.app__app-desc__table
	width 100%
	height 85%
	margin-top: 5%;
	margin-bottom: 10%;
	border-spacing 0
	border-collapse collapse	
	font-size 1em 
	td
		padding 0.5em 0
		vertical-align middle
	+above("s", orientation: landscape)
		position relative
		top 0.5em
		height auto
		
				
.app__app-desc__title
	font-size 2.5em 
	font-weight bold
	text-align center
	line-height: 1;
	margin-bottom 0.5em;
	+above("s", orientation: landscape)
		font-size 2em 
		text-align: left;


.app__app-desc__desc
	font-size 1.3em
	text-align center
	+above("s", orientation: landscape) {
		text-align: left;	
		}
	
			
.app__button-container
	text-align center
	+above("s", orientation: landscape) {
		text-align left
		}

.app__btn
	background: linear-gradient(to bottom,  #f99b1d 0%, #f47320 100%);
	display inline-block
	font-size 1.7em
	font-weight bold 
	text-decoration none
	color #fff
	padding 1em 1.5em
	min-width: 90%;
	word-break break-word
	text-align: center;
	+above("s", orientation: landscape)
		font-size 2em
		white-space nowrap
		padding 1em 2em
		min-width: 0;
				
.app__powered-by 
	position: absolute; left: 50%; margin-left: -20%;
	width 40%
	+above("s", orientation: landscape)
		width 20% 
	img 
		width 100%
	
.app__skip
	position: absolute; right: 0; top: 0;

.app__skip-link
	display block
	color: #c5c5c5;
	text-decoration none
	font-size 1.2em 
	line-height 1 !important 
	padding 0.3em
	margin-top -0.3em 
	+above("s", orientation: landscape) {
		font-size: 1.4em;
		}
	
.swiper-container {
	width: 100%; height: 100%;
	}
	
.swiper-wrapper {
	height: 100%;
	}

.swiper-slide {
	width: 85% !important;
	height: 100%;
	@media (min-width: 400px) and (orientation: landscape) {
		width: 100% !important;
		height: auto !important;
		}
	}
	

// rating

.rating {
	width: 100%;
	color: #FFF;
	text-align: right;
	vertical-align: middle;
	overflow: hidden;
	text-align: left;
}	
	.rating__stars {
		position: relative; top: 2px;
		width: 40%;
		display: inline-block;
		text-align: left;
		img {
			display: block;
			width: 100%;
			}
		}
		
	.stars {
		position: relative;
		width: 100%;
		overflow: hidden;
		.stars__hover {
			position: absolute;
			width: 100%;
			top: 0; left: 0;
			overflow: hidden;
			}
		}

	.rating__downloads {
		display: inline-block;
		width: 58%;
		text-align: right;
		font-size: 1.2em;
		color: #525252;
		}
		
.rating.only-landscape {
	.rating__stars {
		display: block;
		width: 35%;
		margin-bottom: 1em;
		}
	.rating__downloads {
		display: block;
		width: auto;
		text-align: left;
		}
	}
	
// arrows

.arrows {
	}

.arrows__prev,
.arrows__next {
	position: absolute; top: 54.5%;
	width: 4%;
	z-index: 101;
	img {
		width: 100%;
		display: block;
		}
	@media (orientation: landscape) {
		top: auto;
		width: 2%;
		}
	}

	
.arrows__prev {
	left: 5%;
	@media (orientation: landscape) {
		left: 70%;
		top: 2%;
		transform: rotate(90deg);
		}
	}
	
.arrows__next {
	transform: rotate(180deg);
	right: 5%;
	@media (orientation: landscape) {
		right: auto; 
		left: 70%;
		bottom: 2%;
		transform: rotate(-90deg);
		}
	}
	
@media (orientation: landscape) and (min-height: 430px) {
	.arrows__prev {
			top: 8%;
			width: 3%;
		}

	.arrows__next {	
			bottom: 8%;
			width: 3%;
		}	
}


@media (orientation: landscape) and (min-height: 520px) {
	.arrows__prev {
			top: 5%;
			width: 3%;
		}

	.arrows__next {	
			bottom: 5%;
			width: 3%;
		}	
}

@media (orientation: landscape) and (min-height: 768px)  and (max-width: 1024px){ 
	// Ipad
	.arrows__prev {
			top: 10%;
			width: 3%;
		}

	.arrows__next {	
			bottom: 10%;
			width: 3%;
		}	
}